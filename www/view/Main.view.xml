<mvc:View controllerName="SAPUI5ExampleSAPUI5Example.controller.Main"
xmlns:html="http://www.w3.org/1999/xhtml"
xmlns:mvc="sap.ui.core.mvc"
xmlns:core="sap.ui.core"
xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
displayBlock="true" xmlns="sap.m">

	<App>
	
		<pages>
		
			<Page title="{i18n>title}" showNavButton="false">
			
			
			    <headerContent>
		            <Button icon="sap-icon://menu2"  press="handlePressOpenMenu"/>
		        </headerContent>
	
				
				<content>
					<Table
						id="table"
						items="{operators>/Operators}">
						<headerToolbar>
							<Toolbar>
								<Title text="{i18n>tableTitle}"/>
								<ToolbarSpacer/>
								<SearchField width="50%" search="onSearch"/>
							</Toolbar>
						</headerToolbar>
					<columns>
						<Column mergeDuplicates="true">
							<header>
								<Text text="{i18n>tableColumnName}"/>
							</header>
						</Column>
						<Column mergeDuplicates="true">
							<header>
								<Text text="{i18n>tableColumnStatus}"/>
							</header>
						</Column>
						<Column mergeDuplicates="true">
							<header>
								<Text text="{i18n>tableColumnPlant}"/>
							</header>
						</Column>
						<Column mergeDuplicates="true">
							<header>
								<Text text="{i18n>tableColumnPhone}"/>
							</header>
						</Column>
						<Column mergeDuplicates="true">
							<header>
								<Text text="{i18n>tableColumnEmail}"/>
							</header>
						</Column>
					</columns>
					<ColumnListItem>
						<Text text="{operators>name}"/>
						<Text text="{operators>status}"/>
						<Text text="{operators>plant}"/>
						<core:Icon size="1.5rem" src="sap-icon://call" press="phoneBtnClick" app:phone="{operators>phone}"/>
						<core:Icon size="1.5rem" src="sap-icon://email" press="mailBtnClick" app:email="{operators>email}"/>
					</ColumnListItem>
				</Table>
			</content>
			<footer>
				<Bar>
					<contentRight>
						<Label text="{i18n>GroupTitleOrder}"></Label>
						<Select
								id="groupSelect"
								change="handleGroup"
								icon="sap-icon://sort-ascending"
								type="IconOnly"
								selectedKey="None"
								autoAdjustWidth="true" >
							<core:Item
									key="NoneKey"
									text="{i18n>GroupNone}"/>
							<core:Item
									key="NameKey"
									text="{i18n>GroupName}">
							</core:Item>
							<core:Item
									key="StatusKey"
									text="{i18n>GroupStatus}">
							</core:Item>
						</Select>
					</contentRight>
				</Bar>
			</footer>
			<headerContent>
			    <core:Icon size="1.5rem" src="sap-icon://menu2"/>
			</headerContent>
			</Page>
		</pages>
	</App>
</mvc:View>