<mvc:View controllerName="SAPUI5ExampleSAPUI5Example.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	displayBlock="true" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
				   <Table
				       headerText="{i18n>tableTitle}"
				       items="{operators>/Operators}"
                       >
                       <columns>
                           <Column mergeDuplicates="true">
                             <header>
                                <Text text="{i18n>tableColumnName}"/>
                              </header>
                           </Column>
                           <Column mergeDuplicates="true">
                             <header>
                                <Text text="{i18n>tableColumnStatus}"/>
                              </header>
                           </Column>
                           <Column mergeDuplicates="true">
                             <header>
                                <Text text="{i18n>tableColumnPlant}"/>
                              </header>
                           </Column>
                           <Column mergeDuplicates="true">
                             <header>
                                <Text text="{i18n>tableColumnPhone}"/>
                              </header>
                           </Column>
                            <Column mergeDuplicates="true">
                             <header>
                                <Text text="{i18n>tableColumnEmail}"/>
                              </header>
                           </Column>
                           
                       </columns>
                         <ColumnListItem>
                              
                              <Text text="{operators>name}" />
                              <Text text="{operators>status}" />
                              <Text text="{operators>plant}" />
                           	  <core:Icon size="1.5rem" src="sap-icon://call"/>
                           	  <core:Icon size="1.5rem" src="sap-icon://email"/>
							  
                         
                         </ColumnListItem>
				      
				
				
				   </Table>
				
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>